/*
 * normalization
 */
 
html, body {
margin: 0;
padding: 0;
border: none;
}

body {
font-size: 76%; /* normalize font size across browsers */
}

/*
 * headers
 */
 
h1, h2, h3, h4 { color: #038; font-weight: bold; }

/*
 * page layout
 */
 
html, body {
min-height: 100%;
}

body {
background: #005c8a url(/images/background.png) bottom left repeat-x;
background-position: -300px 100%;
padding-bottom: 30px;
}

#page {
/* fonts */
	font-size: 1.3em;
	font-family: Trebuchet MS, Helvetica, sans-serif;
	
/* structure */
	width: 650px;
	padding: 2em 0;
	margin: 0 auto;
}

/*
 * header
 */

#header h1 { margin-top: 0; margin-bottom: 0.25em; font-size: 3em;  }
#header h1 a { color: white; text-decoration: none; }

#header-logo {
position: absolute;
top: 0;
left: 0;
border: 0;
}

#nav {
color: white;
padding-left: 120px;
height: 100px;
overflow: auto;
margin-bottom: 1em;
position: relative;
}

#nav ul, #header ul li { margin: 0; padding: 0; list-style: none; }
#nav ul li { float: left; margin-right: .3em; }
#nav ul { overflow: hidden; position: absolute; bottom: 0; left: 120px; width: 530px; }
#nav ul li a  { display: block; border: 1px solid #068; background: #29b; font-size: 1.3em; padding: 0.2em 0.7em; color: }
#nav ul li a { color: white; text-decoration: none; }

#nav ul li a:hover { background: #3ad; border-color: #08a; }

/*
 * flashes 
 */
 
.flash {
border-radius: 15px; -moz-border-radius: 15px;
padding: 10px 20px 10px 50px;
}
 
.success { background: #4f4 url(/images/success.png) no-repeat 13px 8px; }
.warning, .notice { background: #fc5 url(/images/warning.png) no-repeat 13px 8px; }
.error { background: #f75 url(/images/failure.png) no-repeat 13px 8px; }

/*
 * log in
 */
 
 #user-status {
margin-bottom: 0.75em;
padding: 0.4em 0.75em;
background: #99acba;
border-radius: 10px; -moz-border-radius: 10px;
overflow: auto;
}

#user-status p {
 float: left;
 margin: 0;
}
 
#user-status ul, #user-status ul { display: block; margin: 0; padding: 0; overflow: hidden; }
#user-status ul li {

}
#user-status ul li a {
float: right;
display: block;
background: #009cca;
margin-left: .51em;
border: 1px solid #005cc2; 
padding: 0 .5em;
font-size: 0.9em;
font-weight: bold;
color: #fd0;
text-decoration: none;
}

#user-status ul li a:hover {
background: #d82;
color: #ff8;
}

/*
 * main
 */

#main {
background: white;
margin: 0;
padding: 10px 30px;
overflow: auto;
border-radius: 25px; -moz-border-radius: 25px;
}

/*
 * footer
 */

#footer {
padding-top: 50px;
text-align: center;
color: white;
font-weight: bold;
}

/*
 * inbox
 */
 
#inbox{
	/* stuff for entire inbox */
}
 
#inbox th{
 border-bottom:1px solid black;
}
 
#inbox td{
 border-bottom:1px solid gray;
}
 
#inbox .icon {
	text-align:center;
}
 
#inbox .user{
	text-align:left;
}
 
#inbox .subject{
	text-align:left;
} 
 
#inbox .date{
	text-align:left;
}
 
/*
 * message
 */ 
 
#message{
	/* stuff for message */
}
 
/*
 * paragraph
 */ 
	
p.from{
	font-size: 115%; /* normalize font size across browsers */
}

p.messagebody{
	margin-left:2em;
}
 
 