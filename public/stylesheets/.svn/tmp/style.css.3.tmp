/* ----------- My Form ----------- */
.mymessage{
    margin:0 auto;
    width:400px;
    padding:14px;
}

	
/*---stylized_message*/
#stylized_message{
    border:solid 2px #b7ddf2;
    background:#ebf4fb;
}

#stylized_message h1 {
    font-size:14px;
    font-weight:bold;
    margin-bottom:8px;
}

#stylized_message p.subject{
	color: #038; 
	font-weight: bold;
	margin-left:7em;
}

#stylized_message label{
    display:block;
    font-weight:bold;
    text-align:right;
    width:100px;
    float:left;
}

#stylized_message button{
    clear:both;
    margin-left:150px;
    width:125px;
    height:31px;
    background:#666666 url(img/button.png) no-repeat;
    text-align:center;
    line-height:31px;
    color:#FFFFFF;
    font-size:11px;
    font-weight:bold;
}
 