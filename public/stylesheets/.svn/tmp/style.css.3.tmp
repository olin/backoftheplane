/*
 * header
 */

#header h1 { margin-top: 0; margin-bottom: 0.25em; font-size: 3em;  }
#header h1 a { color: white; text-decoration: none; }

#header-logo {
position: absolute;
top: 0;
left: 0;
border: 0;
}

#nav {
color: white;
padding-left: 120px;
height: 100px;
overflow: auto;
margin-bottom: 1em;
position: relative;
}

#nav ul, #header ul li { margin: 0; padding: 0; list-style: none; }
